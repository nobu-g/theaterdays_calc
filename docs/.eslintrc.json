{
    "extends": ["eslint:recommended"],
    "plugins": [],
    "parserOptions": {},
    "env": {
        "es6": true,
        "browser": true
    },
    "globals": {
        "$": false,
        "ActiveXObject": false
    },
    "rules": {
        "semi": ["error", "always"],
        "semi-spacing": ["error", {"after": true, "before": false}],
        "semi-style": ["error", "last"],
        "no-extra-semi": "warn",
        "no-unexpected-multiline": "error",
        "no-unreachable": "warn",
        "no-undef": "error",
        "no-unused-vars": "warn"
    }
}
